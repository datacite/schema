    <geoLocation>
      <geoLocationPlace>Almost the entire earth</geoLocationPlace>
      <geoLocationPolygons>
        <!-- 
        This polygon is larger than half the earth, inPolygonPoint is therefore
        used to indicate the inside of the polygon 
        -->
